#!/bin/bash

SHOW_QR=0
if [ "$1" == "--qr" ]; then
	SHOW_QR=1;
	shift;
fi

DOMAIN=${SNIKKET_TWEAK_XMPP_DOMAIN:-$SNIKKET_DOMAIN}
URL=$(prosodyctl mod_invites generate "$DOMAIN" "$@")

echo ""
echo "Your invite link: $URL"
echo ""
if [ "$SHOW_QR" = "1" ]; then
	echo "QR code for scanning:"
	echo ""
	echo "$URL" | qrencode -t ansi
	echo ""
fi

